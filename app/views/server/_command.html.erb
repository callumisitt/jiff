<%= simple_form_for @server, url: command_server_path(@server, command), remote: true do |f| %>
  <input id="server-command-restart" name="server[command][<%= command.to_s %>]" type="button" class="small button" value="<%= command.to_s.titleize %>" data-submit <%= @sudo %>>
  <%= f.input :password, as: :hidden, input_html: { class: 'password' } unless @current_server.pwd_not_needed %>
<% end %>