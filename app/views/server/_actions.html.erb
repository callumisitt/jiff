<button class="dropdown" data-dropdown="actions-drop-<%= @server.id %>">Actions</button>
<div id="actions-drop-<%= @server.id %>" data-dropdown-content class="f-dropdown content tiny" tabindex="-1">
  <ul class="button-group stack">
    <% @sudo = @current_server.pwd_not_needed ? nil : "data-sudo=#{@server.id}" %>
  
    <% @current_server.commands.each do |command| %>
      <li><%= render 'command', command: command.to_sym %></li>
    <% end %>
  </ul>
</div>