<%= render 'site_sidebar' %>

<div class="small-12 medium-9 columns">
  <div class="row">
    <div class="medium-9 columns">
      <h3>Server Response</h3>
  
      <table class="full-width">
        <tbody>
          <% @site.server_response.each do |response| %>
            <tr>
              <td><%= response[0].titleize %></td>
              <td><%= truncate response[1][0], length: 50 %></td>
            </tr>
          <% end %>
          <% if @server.info.empty? %>
            <tr>
              <td colspan="2"><em>Could not obtain server info</em></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  
    <div class="medium-3 columns">
      <%= image_tag "http://img.bitpixels.com/getthumbnail?code=18452&size=200&url=#{@site.url}", class: 'border' %>
      <h3 class="name"><span class="status <%= @online_status %>"></span><%= @site.name %><%= image_tag "#{@site.url}/favicon.ico", class: 'favicon right' %></h3>
      <% if @online_status %><p><strong>Avg. Uptime:</strong> <%= @site.avg_uptime %>%<% end %>
      <p><strong>Latest Commit</strong><br>
        &raquo; <%= link_to @latest_commit['commit']['message'], @latest_commit['html_url'], target: '_blank' %> <br><small><%= @latest_commit['commit']['committer']['name'] %> - <%= @latest_commit['commit']['committer']['date'].gsub!(/[^\d-:]/, ' ') %> </small>
      </p>
    </div>
  </div>
</div>