<% case view_type %>
<% when :dashboard %>

  <div class="row">
    <div class="medium-6 columns">
      <h3><span class="status <%= server.status.to_words %>"></span><%= link_to server.name, server_path(server) %></h3>
      <% if server.status == 2 %>
        
        <% cache "#{server.name.to_slug}_dashboard", expires_in: 5.minutes do %>
          <p><%= image_tag "icons/#{server.os[:dist].to_slug}.png" %><%= server.os[:name] %></p>
       
          <%= render 'server_actions', server: server %>
        
          </div>
          <div class="medium-6 columns monitor">

            <% if monitor = server.monitor['summary'] %>
        			<p><%= image_tag 'icons/hardware.png' %> <%= monitor['cpu'] %>% used</p>
        			<p><%= image_tag 'icons/memory.png' %> <%= number_to_human_size monitor['memory_used']%> / <%= number_to_human_size monitor['memory_total']%></p>
        			<p><%= image_tag 'icons/hdd.png' %> <%= number_to_human_size monitor['fullest_disk_free'] %> free</p>
        		<% end %>
        
          </div>
        <% end %>
      <% else %>
        <p><em>Could not connect to server</em></p>
        </div>
      <% end %>
  </div>
  
<% when :sidebar %>

	<%= image_tag 'server.png' %>
  <h3><span class="status <%= @status.to_words %>"></span><%= link_to server.name, server_path(server) %></h3>
  
  <% if @status == 2 %>
  
    <% cache "#{server.name.to_slug}_sidebar", expires_in: 5.minutes do %>
      <p><%= image_tag "icons/#{server.os[:dist].to_slug}.png" %><%= server.os[:name] %></p>
        
      <%= render 'server_actions', server: server %>
    
      <% if monitor = server.monitor['summary'] %>
  			<p><%= image_tag 'icons/hardware.png' %> <%= monitor['cpu'] %>% used</p>
  			<p><%= image_tag 'icons/memory.png' %> <%= number_to_human_size monitor['memory_used']%> / <%= number_to_human_size monitor['memory_total']%></p>
  			<p><%= image_tag 'icons/hdd.png' %> <%= number_to_human_size monitor['fullest_disk_free'] %> free</p>
  		<% end %>
    <% end %>
    
  <% else %>
    <p><em>Could not connect to server</em></p>
  <% end %>
  
<% end %>