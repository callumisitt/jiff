<% unless defined? hidden %>
  <div data-alert class="alert-box info radius">
    Sudo access required for this resource.
    <a href="#" class="close">&times;</a>
  </div>
<% end %>

<div id="sudo" class="reveal-modal tiny" data-reveal>
	<% if flash[:error] %>
	 	<div data-alert class="alert-box alert">
		  <%= flash[:error] %>
		  <a href="#" class="close">&times;</a>
		</div>
	<% end %>

  <%= simple_form_for item, url: url do |f| %>
    <%= f.input :password, label: false, placeholder: 'Sudo password needed...', as: :password, input_html: { autofocus: true } %>
    <%= f.button :submit, 'Set Password' %>
  <% end %> 
</div>